{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build npm run build:desktop",
        "type": "npm",
        "script": "build:desktop",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build Typescript",
        "type": "typescript",
        "tsconfig": "tsconfig.json",
        "problemMatcher": [
          "$tsc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build Windows Desktop Application",
        "dependsOn": [
          "Build Typescript",
          "Build npm run build:desktop"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build npm run build:browser",
        "type": "npm",
        "script": "build:browser",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }