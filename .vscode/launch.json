{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simulate Android in browser",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "chrome",

            "simulatePort": 8000,
            "livereload": true,
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "preLaunchTask": "PreBuild Omega"
        },
        {
            "name": "Launch ionic:serve via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "ionic:serve"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "preLaunchTask": "PreBuild Omega"
        }
    ]
}